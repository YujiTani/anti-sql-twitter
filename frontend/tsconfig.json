{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "nodenext",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "types": ["vite/client", "vitest/globals", "bun-types"],
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@tests/*": ["./tests/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
